@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Wallet;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Редактор кошельков";
}
@*Модальное окно*@
<div class="modal fade" id="staticUpload" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" >
        <div class="modal-content" style="height: 100%;">
            <div class="modal-header">
	            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Добавьте реквизиты Юмани и Qiwi, чтобы пользователи могли поддерживать ваш канал!
            </div>
        </div>
    </div>
</div>
@*Тело страницы*@
<div class="row mt-3">
	<div class="col-md-5 col-xxl-4 mx-auto">
		<form asp-action="Edit">
			<div class="form-floating mb-3">
				<input asp-for="YoomoneyId" class="form-control"/>
				<label asp-for="YoomoneyId" class="form-label"></label>
				<span asp-validation-for="YoomoneyId"></span>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="QiwiPhoneNumber" class="form-control"/>
				<label asp-for="QiwiPhoneNumber" class="form-label"></label>
				<span asp-validation-for="QiwiPhoneNumber"></span>
			</div>
			<div class="m-0 p-0">
				<input asp-for="UserId" type="hidden">
			</div>
			<div class="d-flex gap-2 justify-content-center">
				<input class="btn btn-outline-success float-right" type="submit" value="Сохранить"/>
			</div>
		</form>
	</div>
</div>
@if (string.IsNullOrEmpty(Model.QiwiPhoneNumber) && string.IsNullOrEmpty(Model.YoomoneyId))
{
	<script type="text/javascript">
    	window.onload = () => {
    		const myModal = new bootstrap.Modal('#staticUpload');
    		myModal.show();
    	}
    </script>
}
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>