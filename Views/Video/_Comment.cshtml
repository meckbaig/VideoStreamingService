@model Comment;

<div id="comment_@Model.Id" class="my-1 position-relative">
	<a href="~/@Model.User.Url" class="text-decoration-none text-reset">
		<img src="data:image/jpeg;base64,@Model.User.Image" class="rounded-circle p-0 my-2 me-3"
			 style="aspect-ratio: 1/1;max-height:48px;max-width:48px">
	</a>
	<a class="fs-5 text-decoration-none text-reset" href="~/@Model.User.Url">@Model.User.Name</a>
	
	<div class="input-group align-self-center">
		<textarea id="commentArea_@Model.Id" class="form-control bg-body border-0 m-0 p-0" disabled>@Model.Message</textarea>
		<button class="btn btn-primary opacity-0" onclick="saveComment(@Model.Id)" id="saveComment_@Model.Id" disabled>
			<svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" fill="currentColor" class="bi bi-arrow-right position-absolute top-50 start-50 translate-middle m-0" viewBox="0 0 16 16">
				<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
			</svg>
		</button>
	</div>

	@if (Model.User.Url == User.Identity.Name)
	{
		<div class="top-0 end-0 to-show position-absolute p-0 d-flex"
			style="margin:6px;width:72px;height:32px">
			<div class="position-relative btn btn-secondary opacity-50 rounded-circle w-100 h-100 m-0 me-2" onclick="editComment(@Model.Id)">
				<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" class="bi bi-pencil position-absolute top-50 start-50 translate-middle m-0" viewBox="0 0 16 16">
					<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
				</svg>
			</div>
			<div class="position-relative btn btn-danger opacity-50 rounded-circle w-100 h-100 m-0" onclick="deleteComment(@Model.Id)">
				<svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" class="bi bi-trash position-absolute top-50 start-50 translate-middle m-0" viewBox="0 0 16 16">
					<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
					<path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
				</svg>
			</div>
		</div>
	}
</div>

<script src="~/js/commentControls.js"></script>